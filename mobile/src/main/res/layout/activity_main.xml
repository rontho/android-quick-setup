<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:paddingLeft="@dimen/activity_horizontal_margin"
                                             android:paddingRight="@dimen/activity_horizontal_margin"
                                             android:paddingTop="@dimen/activity_vertical_margin"
                                             android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/main_activity__text_from_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_activity__text_from_database"/>

    <TextView
        android:id="@+id/main_activity__text_from_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        app:layout_constraintTop_toBottomOf="@+id/main_activity__text_from_server"
        app:layout_constraintRight_toRightOf="@+id/main_activity__text_from_server"
        app:layout_constraintLeft_toLeftOf="@+id/main_activity__text_from_server"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
